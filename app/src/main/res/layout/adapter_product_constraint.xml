<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
  android:id="@+id/product_card"
  android:layout_width="match_parent"
  android:layout_height="350dp"
  android:layout_margin="12dp"
  android:padding="24dp"
  app:cardCornerRadius="8dp"
  app:cardElevation="4dp"
  app:layout_constraintEnd_toEndOf="parent"
  app:layout_constraintStart_toStartOf="parent"
  app:layout_constraintTop_toTopOf="parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/title_and_price_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="3"
        tools:src="@drawable/jpeg_double_choc_cookie" />

      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_and_price_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@id/button_layout"
        app:layout_constraintTop_toBottomOf="@id/product_image"
        app:layout_constraintVertical_weight="0.75">

        <TextView
          android:id="@+id/product_title"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="8"
          android:fontFamily="sans-serif-light"
          android:gravity="center_vertical"
          android:singleLine="true"
          android:textSize="30sp"
          app:layout_constraintHorizontal_weight="2"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toLeftOf="@id/product_price"
          tools:text="COOKIE DOUBLE CHOCOLAT" />

        <TextView
          android:id="@+id/product_price"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:fontFamily="sans-serif-thin"
          android:gravity="center_vertical|end"
          android:singleLine="true"
          android:textSize="30sp"
          app:layout_constraintHorizontal_weight="1"
          app:layout_constraintLeft_toRightOf="@id/product_title"
          app:layout_constraintRight_toRightOf="parent"
          tools:text="â‚¬1.75" />

      </androidx.constraintlayout.widget.ConstraintLayout>

      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_and_price_layout"
        app:layout_constraintVertical_weight="0.5">

        <View
          android:id="@+id/spacer"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          app:layout_constraintHorizontal_weight="2"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toLeftOf="@id/remove_from_basket_button" />

        <Button
          android:id="@+id/remove_from_basket_button"
          style="@style/Widget.MaterialComponents.Button.OutlinedButton"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:text="REMOVE"
          android:visibility="gone"
          app:layout_constraintHorizontal_weight="1"
          app:layout_constraintLeft_toRightOf="@id/spacer"
          app:layout_constraintRight_toLeftOf="@id/spacer_2" />

        <View
          android:id="@+id/spacer_2"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          app:layout_constraintHorizontal_weight="0.05"
          app:layout_constraintLeft_toRightOf="@id/remove_from_basket_button"
          app:layout_constraintRight_toLeftOf="@id/add_to_basket_button" />

        <Button
          android:id="@+id/add_to_basket_button"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:text="ADD"
          app:layout_constraintHorizontal_weight="1"
          app:layout_constraintLeft_toRightOf="@id/spacer_2"
          app:layout_constraintRight_toRightOf="parent" />

      </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.cardview.widget.CardView>
